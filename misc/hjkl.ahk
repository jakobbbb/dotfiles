; F12 + H -> Left Arrow
F12 & h::Send {Left}

; F12 + J -> Down Arrow
F12 & j::Send {Down}

; F12 + K -> Up Arrow
F12 & k::Send {Up}

; F12 + L -> Right Arrow
F12 & l::Send {Right}

; Remap "F12 + Space" to "Enter"
F12 & Space::Send {Enter}

; Remap "Shift + Space" to "Backspace"
+Space::Send {Backspace}