# This is the mutt config for the `sample` inbox.
# It should be at `~/mail/sample`.

source ~/.mutt/muttrc

set my_acc = "sample"
set my_user = "hey@example.com"
set my_server = "mail.example.com"
# plaintext contents: `set my_pass = 123456`
source "gpg -dq ~/.sample.gpg |"

set folder = ~/mail/$my_acc
set spoolfile = +inbox
set mbox = +inbox

macro index G "!ms $my_acc^M" "run mbsync+notmuch"

set from = $my_user
set use_from = yes

set smtp_url=smtp://$my_user@$my_server
set smtp_pass=$my_pass
set ssl_force_tls = yes
set ssl_starttls = yes

#set signature="~/.signature"
set record = "+Sent"

# vim: filetype=muttrc
